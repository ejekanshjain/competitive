{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ Build and Run active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\..\\build\\${fileBasenameNoExtension}.exe",
                ";",
                "${fileDirname}\\..\\build\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}